journal = {Frontiers in Systems Neuroscience},
keywords = {attention,attention, cholinergic system, cognitive enhanceme,cholinergic system,cognitive enhancement,cortical plasticity,muscarinic,nicotinic receptors,perceptual learning,receptors,visual cortex},
